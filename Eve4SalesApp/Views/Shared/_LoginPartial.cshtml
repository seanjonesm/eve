@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">

       
      
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class="glyphicon glyphicon-wrench"></span> Admin<span class="caret"></span></a>
            <ul class="dropdown-menu" style="width:250px">
                
                <li><a href="/EVE/Maintenance/UpdateRelease">Update Release Global Parameter</a></li>
                <li><a href="/EVE/SalesModels/Create">Add New Sales Data</a></li>
                <li role="separator" class="divider"></li>
                <li><a href="/EVE/Account/Register">Add New User</a></li>
                <li><a href="/EVE/Manage/Index">Manage Account</a></li>
                
            </ul>
        </li>
        <li><a href="/EVE/Manage/Index">@User.Identity.GetUserName()</a></li>

        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
