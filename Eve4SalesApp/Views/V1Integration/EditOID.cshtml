@model Eve4SalesApp.Models.SalesModel

@{
    ViewBag.Title = "Edit OID";
}


<div class="container">
    <div style="margin-top:50px;" class="mainbox col-md-10 col-md-offset-1 col-sm-8 col-sm-offset-2">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="panel-title">Edit Backlog Goal / OID - <b>@Html.DisplayFor(model => model.Make) | @Html.DisplayFor(model => model.Model)</b></div>

            </div>
            <div style="padding-top:30px; padding-left: 100px;" class="panel-body">


                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.SalesModelID)

                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.HiddenFor(model => model.Make, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Make, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">

                            <div class="col-md-10">
                                @Html.HiddenFor(model => model.Model, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Model, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">Backlog Goal</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.BacklogGrp, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.BacklogGrp, "", new { @class = "text-danger" })
                            </div>
                        </div>


                        <div class="form-group">
                            <label class="control-label col-md-2">Goal OID</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.GrpOID, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.GrpOID, "", new { @class = "text-danger" })
                            </div>
                        </div>



                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Save" class="btn btn-info" />
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>

                <div>
                    @Html.ActionLink("Back to List", "ListOID")
                </div>
