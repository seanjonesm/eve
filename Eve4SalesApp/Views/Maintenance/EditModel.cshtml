@model Eve4SalesApp.Models.EditModel

@{
    ViewBag.Title = "EditModel";
    int roOoption1 = Model.Year + 1;
    int roOoption2 = Model.Year + 2;
    int roOoption3 = Model.Year + 3;
}


<div class="container">
    <div style="margin-top:50px;" class="mainbox col-md-10 col-md-offset-1 col-sm-8 col-sm-offset-2">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="panel-title"><h4>Model Options</h4></div>

            </div>
            <div style="padding-top:30px; padding-left: 100px;" class="panel-body">



                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.HiddenFor(model => model.CovTransId, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CovTransId, "", new { @class = "text-danger" })

                            @Html.HiddenFor(model => model.xMarket, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.xMarket, "", new { @class = "text-danger" })


                            @Html.HiddenFor(model => model.ManualAdd, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ManualAdd, "", new { @class = "text-danger" })

                            @Html.HiddenFor(model => model.RollOn, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.RollOnYear, "", new { @class = "text-danger" })


                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Make, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.Make, new { htmlAttributes = new { @class = "form-control ", @readonly = "readonly" } })
                                @Html.ValidationMessageFor(model => model.Make, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Model, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.Model, new { htmlAttributes = new { @class = "form-control ", @readonly = "readonly" } })
                                @Html.ValidationMessageFor(model => model.Model, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Market, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.Market, new { htmlAttributes = new { @class = "form-control ", @readonly = "readonly" } })
                                @Html.ValidationMessageFor(model => model.Market, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Year, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.Year, new { htmlAttributes = new { @class = "form-control ", @readonly = "readonly"
                           } })
                                @Html.ValidationMessageFor(model => model.Year, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Rank, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.Rank, new { htmlAttributes = new { @class = "form-control ", @readonly = "readonly" } })
                                @Html.ValidationMessageFor(model => model.Rank, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Sales, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.Sales, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Sales, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        
                        

                        <div class="form-group">
                            <label class="control-label col-md-3">Delete model?
                                <a href="#" data-toggle="tooltip" title="Model will be deleted for the referenced market and year only"><span class="glyphicon glyphicon-info-sign"></span></a>
                            </label>
                            <div class="col-md-9">
                                <div class="checkbox-inline">

                                    <label class="checkbox-inline checkbox-bootstrap-na checkbox-lg">
                                        <input type="checkbox" id="DeleteModel" class="DeleteModel" name="DeleteModel" value="true" />

                                        <span class="checkbox-placeholder-na"></span>
                                    </label>

                                </div>
                            </div>
                        </div>


                        <br />
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Update Sales" id="submitForm" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                }


            </div>
        </div>
    </div>
</div>
<div>
    @Html.ActionLink("Back to List", "Index", "SalesModels")
</div>


                <script src="~/Scripts/jquery-1.10.2.js"></script>
                <script type="text/javascript">


                    $('#DeleteModel').change(function () {
                        if ($('#DeleteModel').is(':checked') == true) {
                            $('#Sales').prop('readonly', true);
                            $('#RollOn').prop('disabled', true);
                            $('#RollOnYear').prop('readonly', true);
                            $('#submitForm').val("Delete Model");
                            $('#submitForm').removeClass("btn btn-primary");
                            $('#submitForm').addClass("btn btn-danger");

                            console.log('checked');
                        }
                    });

                    $('#DeleteModel').change(function () {
                        if ($('#DeleteModel').is(':checked') == false) {
                            $('#Sales').prop('readonly', false);
                            $('#RollOn').prop('disabled', false);
                            $('#submitForm').val("Update Sales");
                            $('#submitForm').removeClass("btn btn-danger");
                            $('#submitForm').addClass("btn btn-primary");

                            console.log('checked');
                        }
                    });

          
                </script>
