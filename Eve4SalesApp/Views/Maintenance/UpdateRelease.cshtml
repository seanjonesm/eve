@model Eve4SalesApp.Models.ReleaseModel

@{
    ViewBag.Title = "Update Release";
}


<div class="container">
    <div style="margin-top:50px;" class="mainbox col-md-10 col-md-offset-1 col-sm-8 col-sm-offset-2">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="panel-title">Update Current Release Global Parameter</div>

            </div>
            <div style="padding-top:30px; padding-left: 100px; background-color:#FFFFFF;" class="panel-body">

               

                @using (Html.BeginForm("UpdateRelease", "Maintenance", FormMethod.Post, new { @class = "form-inline" }))
                {
                    @Html.AntiForgeryToken()
                    <div style="align-content:center">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.TransID)
                        @Html.EditorFor(model => model.CurrentRelease, new { htmlAttributes = new { @class = "form-control input-lg" } })
                        <input type="submit" value="Update" class="btn-lg btn-success" />
                        @Html.ValidationMessageFor(model => model.CurrentRelease, "", new { @class = "text-danger" })
                    </div>
                }

                <br />


            </div>
        </div>
    </div>
</div>

<div>
    @Html.ActionLink("Back Home", "Index", "Home")
</div>

